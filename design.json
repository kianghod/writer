{
  "elementStyling": {
    "background": {
      "appBackground": {
        "color": "#FFFFFF",
        "context": "Base background for all screens"
      }
    },
    "text": {
      "primaryHeader": {
        "color": "#222222",
        "fontWeight": "bold",
        "fontSize": "20px",
        "context": "Screen headers (e.g. 'Enter Passcode', 'Write', 'Story 1')"
      },
      "body": {
        "color": "#222222",
        "fontWeight": "normal",
        "fontSize": "14px",
        "context": "Story titles inside cards"
      },
      "secondary": {
        "color": "#9A9A9A",
        "fontWeight": "normal",
        "fontSize": "14px",
        "context": "Line numbers or placeholder text if any (not present in screenshot but defined for extensibility)"
      }
    },
    "cards": {
      "container": {
        "background": "#F5F5F5",
        "border": "1px solid #E0E0E0",
        "borderRadius": "8px",
        "boxShadow": "none",
        "context": "Story card backgrounds on Write screen"
      },
      "hover": {
        "background": "#E6E6E6",
        "border": "1px solid #D6D6D6",
        "transition": "background 0.2s",
        "context": "Story card background when hovered"
      },
      "active": {
        "background": "#E0E0E0",
        "border": "1px solid #CCCCCC",
        "context": "Story card when actively clicked/pressed"
      },
      "disabled": {
        "background": "#F0F0F0",
        "border": "1px solid #E0E0E0",
        "opacity": "0.5",
        "context": "Story card when disabled/unselectable"
      },
      "content": {
        "textColor": "#222222",
        "context": "Story title text inside cards"
      }
    },
    "buttons": {
      "numericPad": {
        "background": "#E5E5E5",
        "text": "#222222",
        "border": "none",
        "borderRadius": "4px",
        "boxShadow": "none",
        "hover": {
          "background": "#CCCCCC"
        },
        "active": {
          "background": "#B0B0B0"
        },
        "disabled": {
          "background": "#F0F0F0",
          "text": "#9A9A9A",
          "opacity": "0.5"
        },
        "context": "Keypad buttons on passcode screen"
      },
      "iconButton": {
        "background": "none",
        "iconFill": "#222222",
        "border": "none",
        "borderRadius": "50%",
        "hover": {
          "iconFill": "#007AFF",
          "background": "#F0F0F0"
        },
        "active": {
          "iconFill": "#0055AA",
          "background": "#E5E5E5"
        },
        "context": "Plus/add button (top-right of Write screen), back icon button (Story screen)"
      }
    },
    "icons": {
      "default": {
        "fill": "#222222",
        "background": "none",
        "context": "Any decorative icons (add, back arrow)"
      },
      "hover": {
        "fill": "#007AFF",
        "context": "Icon hover state"
      },
      "active": {
        "fill": "#0055AA",
        "context": "Icon pressed state"
      }
    },
    "lines": {
      "dividerLines": {
        "color": "#E0E0E0",
        "context": "Horizontal lines on story detail page"
      }
    }
  },
  "visualEffects": {
    "shadows": {
      "appliedTo": [],
      "context": "NO element in these mockups uses box-shadow; all components are flat and minimal."
    },
    "gradients": {
      "appliedTo": [],
      "context": "NO element uses a gradient. All backgrounds and fills are solid colors only."
    },
    "borderRadius": {
      "card": "8px",
      "numericButton": "4px",
      "iconButton": "50%",
      "context": "Used to soften cards, numeric key buttons, and icon buttons."
    },
    "hoverAnimations": {
      "appliedTo": [
        "cards",
        "numericPad.buttons",
        "iconButton"
      ],
      "effect": "background color transition (0.2s linear)",
      "context": "Cards, numeric buttons, and icon buttons receive a lighter background on hover."
    },
    "focusIndicators": {
      "appliedTo": [
        "numericPad.buttons",
        "iconButton"
      ],
      "effect": "Outline: 2px solid #007AFF",
      "context": "Visible on focus for accessibility (tab/keyboard navigation)."
    }
  },
  "componentStates": {
    "cards": {
      "default": {
        "background": "#F5F5F5",
        "border": "#E0E0E0"
      },
      "hover": {
        "background": "#E6E6E6",
        "border": "#D6D6D6"
      },
      "active": {
        "background": "#E0E0E0",
        "border": "#CCCCCC"
      },
      "disabled": {
        "background": "#F0F0F0",
        "border": "#E0E0E0",
        "opacity": "0.5"
      }
    },
    "numericPad.buttons": {
      "default": {
        "background": "#E5E5E5",
        "text": "#222222"
      },
      "hover": {
        "background": "#CCCCCC"
      },
      "active": {
        "background": "#B0B0B0"
      },
      "disabled": {
        "background": "#F0F0F0",
        "text": "#9A9A9A"
      },
      "focus": {
        "outline": "2px solid #007AFF"
      }
    },
    "iconButton": {
      "default": {
        "iconFill": "#222222",
        "background": "none"
      },
      "hover": {
        "iconFill": "#007AFF",
        "background": "#F0F0F0"
      },
      "active": {
        "iconFill": "#0055AA",
        "background": "#E5E5E5"
      },
      "disabled": {
        "iconFill": "#CCCCCC",
        "background": "none"
      },
      "focus": {
        "outline": "2px solid #007AFF"
      }
    }
  },
  "DO_NOT": [
    "DO NOT use gradients on any element; all elements require solid color fills.",
    "DO NOT apply card background color or gradient to icons, buttons, or text.",
    "DO NOT apply numeric keypad button background or color to story cards.",
    "DO NOT use shadow effects or gradient backgrounds for any element.",
    "DO NOT use the same hover/active colors for cards and buttons interchangeably; use those defined for each component.",
    "DO NOT use card border color for button borders â€“ only apply borders as specified.",
    "DO NOT use app header text style for card text or button labels."
  ]
} 